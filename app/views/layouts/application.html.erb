<!DOCTYPE html>
<html>
  <head>
    <title>RailsYelpMvp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <class class="navbar px-5 py-3 mb-5 bg-dark text-white">
      <h4><%= link_to 'Restos', restaurants_path, class: "text-white nounderline" %></h4>
      <p class='text-right'><%= link_to 'Add Restaurant', new_restaurant_path, class: "text-white nounderline" %></p>
    </class>
    <%= yield %>
  </body>
</html>
